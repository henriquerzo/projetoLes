<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GameActivity" >

    <ImageView
        android:id="@+id/ImageButton01"
 		android:layout_width="95px"
        android:layout_height="90px"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_toRightOf="@+id/imageButton1"
        android:onClick="click"
        android:src="@drawable/ic_launcher"
        android:tag="2" />

    <ImageView
        android:id="@+id/ImageButton02"
 		android:layout_width="95px"
        android:layout_height="90px"
        android:layout_alignTop="@+id/ImageButton01"
        android:layout_toRightOf="@+id/ImageButton01"
        android:onClick="click"
        android:src="@drawable/ic_launcher"
        android:tag="3" />

    <ImageView
        android:id="@+id/ImageButton03"
 		android:layout_width="95px"
        android:layout_height="90px"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_below="@+id/imageButton1"
        android:onClick="click"
        android:src="@drawable/ic_launcher"
        android:tag="4" />

    <ImageView
        android:id="@+id/ImageButton05"
        android:layout_width="95px"
        android:layout_height="90px"
        android:layout_alignLeft="@+id/ImageButton02"
        android:layout_alignTop="@+id/ImageButton04"
        android:onClick="click"
        android:src="@drawable/ic_launcher"
        android:tag="6" />

    <ImageView
        android:id="@+id/ImageButton06"
        android:layout_width="95px"
        android:layout_height="90px"
        android:layout_alignLeft="@+id/ImageButton03"
        android:layout_below="@+id/ImageButton03"
        android:onClick="click"
        android:src="@drawable/ic_launcher"
        android:tag="7" />

    <ImageView
        android:id="@+id/ImageButton07"
        android:layout_width="95px"
        android:layout_height="90px"
        android:layout_alignLeft="@+id/ImageButton04"
        android:layout_below="@+id/ImageButton04"
        android:onClick="click"
        android:src="@drawable/ic_launcher"
        android:tag="8" />

    <ImageView
        android:id="@+id/ImageButton08"
        android:layout_width="95px"
        android:layout_height="90px"
        android:layout_alignLeft="@+id/ImageButton05"
        android:layout_alignTop="@+id/ImageButton07"
        android:onClick="click"
        android:src="@drawable/ic_launcher"
        android:tag="9" />

    <ImageView
        android:id="@+id/ImageButton04"
        android:layout_width="95px"
        android:layout_height="90px"
        android:layout_above="@+id/ImageButton06"
        android:layout_alignLeft="@+id/ImageButton01"
        android:onClick="click"
        android:src="@drawable/ic_launcher"
        android:tag="5" />

    <ImageView
        android:id="@+id/imageButton1"
        android:layout_width="95px"
        android:layout_height="90px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:onClick="click"
        android:src="@drawable/ic_launcher"
        android:tag="1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Tempo:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="26px" />

    <Chronometer
        android:id="@+id/chronometer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Chronometer"
        android:textSize="26px" />

    <ImageView
        android:id="@+id/button1"
        android:layout_width="42px"
        android:layout_height="42px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="42dp"
        android:adjustViewBounds="false"
        android:background="@drawable/refresh"
        android:onClick="reiniciar"
        android:text="Reiniciar" />

</RelativeLayout>